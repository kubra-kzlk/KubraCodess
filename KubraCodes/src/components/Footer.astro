<script is:inline>
	document.addEventListener("DOMContentLoaded", () => {
		lucide.createIcons();
	});
</script>

<footer>
	<div class="divider"></div>
	<div class="footer-content">
		<div class="footer-section">
			<div class="section-header">
				<i data-lucide="map-pin" class="icon"></i>
				<h3>LOCATION</h3>
			</div>
			<p class="hover-slide">Antwerp 2000</p>
		</div>

		<div class="footer-section">
			<div class="section-header">
				<i data-lucide="Cable" class="icon"></i>
				<h3>CONNECT</h3>
			</div>
			<div class="social-links">
				<a
					href="https://github.com/kubra-kzlk"
					aria-label="Github"
					class="social-link"
				>
					<i data-lucide="github" class="icon"></i>
					<span class="tooltip">Github</span>
				</a>
				<a
					href="https://www.linkedin.com/in/kubra-k-768284336"
					aria-label="LinkedIn"
					class="social-link"
				>
					<i data-lucide="linkedin" class="icon"></i>
					<span class="tooltip">LinkedIn</span>
				</a>
				<a
					href="https://www.instagram.com/kubra.kzlk?utm_source=qr&igsh=MTVwMnluYjQ1eWgzZA=="
					aria-label="Instagram"
					class="social-link"
				>
					<i data-lucide="instagram" class="icon"></i>
					<span class="tooltip">Instagram</span>
				</a>
				<a
					href="https://www.facebook.com/kubra.kizilkilic.95"
					aria-label="Facebook"
					class="social-link"
				>
					<i data-lucide="facebook" class="icon"></i>
					<span class="tooltip">Facebook</span>
				</a>
			</div>
		</div>

		<div class="footer-section">
			<div class="section-header">
				<i data-lucide="mail" class="icon"></i>
				<h3>EMAIL</h3>
			</div>
			<a href="mailto:kubra.kizikilu@gmail.com" class="email-link"
				>kubra.kizilkilic@gmail.com
				<i data-lucide="mail" class="mail-icon"></i>
			</a>
		</div>

		<div class="footer-section">
			<div class="section-header">
				<i data-lucide="message-circle" class="icon"></i>
				<h3>FEEDBACK</h3>
			</div>
			<p>
				I value your <a
					href="https://forms.gle/4o7qfeu4HdUf7utz8"
					class="feedback-link"
				>
					<strong>feedback!</strong>
				</a> Please let me know your thoughts about my portfolio or content.
			</p>
		</div>
	</div>
	<div class="copyright">
		<p>&copy; {today.getFullYear()} KubraCodes. All rights reserved.</p>
	</div>
</footer>

<style>
	footer {
		background-color: #ffffff;
		color: #ba5765;
	}

	.divider {
		height: 1px;
		background-color: #e0e0e0;
		margin: 0 auto 2em auto;
		width: 80%;
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 2rem;
	}

	.footer-section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.section-header {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 0.5rem;
	}

	.section-header h3 {
		font-size: 1rem;
		font-weight: 600;
		margin: 0;
		color: #ba5765;
	}

	.icon {
		width: 20px;
		height: 20px;
		stroke: currentColor;
	}
	.social-link {
		color: #ba5765;
		position: relative;
		display: inline-flex;
		transition: all 0.3s ease;
	}

	.social-link:hover {
		color: #ba5765;
		transform: scale(1.2);
	}

	.social-link::after {
		content: "";
		position: absolute;
		width: 100%;
		height: 2px;
		bottom: -4px;
		left: 0;
		background-color: #ba5765;
		transform: scaleX(0);
		transform-origin: right;
		transition: transform 0.3s ease;
	}

	.social-link:hover::after {
		transform: scaleX(1);
		transform-origin: left;
	}
	.tooltip {
		position: absolute;
		bottom: -2rem;
		left: 50%;
		transform: translateX(-50%);
		background-color: #ba5765;
		color: white;
		padding: 0.25rem 0.5rem;
		border-radius: 4px;
		font-size: 0.75rem;
		opacity: 0;
		visibility: hidden;
		transition: all 0.3s ease;
		white-space: nowrap;
	}

	.social-link:hover .tooltip {
		opacity: 1;
		visibility: visible;
		bottom: -1.75rem;
	}

	.social-links {
		display: flex;
		gap: 1rem;
		margin-top: 0.5rem;
	}

	.social-links a {
		color: #ba5765;
		transition: all 0.3s ease;
		display: inline-block;
	}

	.social-links a:hover {
		color: #ba5765;
		transform: scale(1.2) rotate(5deg);
	}

	.email-link {
		color: #ba5765;
		text-decoration: none;
		transition: all 0.3s ease;
		position: relative;
		display: inline-block;
	}

	.mail-icon {
		width: 16px;
		height: 16px;
		opacity: 0;
		transform: translateX(-10px);
		transition: all 0.3s ease;
	}

	.email-link::after {
		content: "";
		position: absolute;
		width: 0;
		height: 1px;
		bottom: -2px;
		left: 0;
		background-color: #ba5765;
		transition: width 0.3s ease;
	}

	.email-link:hover {
		color: #ba5765;
		transform: translateY(-2px);
	}
	.email-link:hover .mail-icon {
		opacity: 1;
		transform: translateX(0);
	}

	.email-link:hover::after {
		width: 100%;
	}

	.feedback-link {
		color: #ba5765;
		text-decoration: none;
		position: relative;
		transition: all 0.3s ease;
	}

	.feedback-link::after {
		content: "";
		position: absolute;
		width: 0;
		height: 1px;
		bottom: -2px;
		left: 0;
		background-color: #ba5765;
		transition: width 0.3s ease;
	}

	.feedback-link:hover {
		color: #ba5765;
	}

	.feedback-link:hover::after {
		width: 100%;
	}
	.hover-slide {
		transition: transform 0.3s ease;
		display: inline-block;
		position: relative;
	}
	.hover-slide:hover {
		transform: translateX(8px);
	}

	.hover-slide::after {
		content: "";
		position: absolute;
		width: 100%;
		height: 2px;
		bottom: -2px;
		left: 0;
		background-color: #ba5765;
		transform: scaleX(0);
		transform-origin: right;
		transition: transform 0.3s ease;
	}

	.hover-slide:hover::after {
		transform: scaleX(1);
		transform-origin: left;
	}
	.copyright {
		text-align: center;
		margin-top: 3rem;
		color: #ba5765;
		font-size: 0.875rem;
	}

	@media (max-width: 1024px) {
		.footer-content {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 640px) {
		.footer-content {
			grid-template-columns: 1fr;
		}

		footer {
			padding: 2rem 1rem;
		}
	}
</style>
