---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import ThemeToggle from "./common/ThemeToggle.astro";
---

<header class="p-4 bg-white dark:bg-gray-900">
	<nav class="flex justify-between items-center">
		<h2>
			<a href="/"><img src="/logoNameBg.png" alt={SITE_TITLE} /></a>
		</h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/project">Projects</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>

		<div><ThemeToggle /></div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
		width: 150px;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		color: #ba5765;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: #ba5765; ;
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
