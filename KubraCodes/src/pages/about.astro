			{ name: "Git", icon: "fab fa-git" },
			{ name: "GitHub", icon: "fab fa-github" },
			{ name: "Figma", icon: "fab fa-figma" },
			{ name: "Docker", icon: "fab fa-docker" },
			{ name: "npm", icon: "fab fa-npm" },
