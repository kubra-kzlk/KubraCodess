	<div class="skills-section">
		<h2 id="experienceText">
			Hover over a technology to see my experience
		</h2>
	</div>

	<section class="skills-section">
		{
			skills.map((category) => (
				<div>
					<h3>{category.category}</h3>
					<div class="skills-grid">
						{category.technologies.map((tech) => (
							<div class="skill-item" data-technology={tech.name}>
								{tech.icon.startsWith("http") ? (
									<img
										src={tech.icon}
										alt={tech.name}
										class="tech-icon"
									/>
								) : (
									<i class={`tech-icon ${tech.icon}`} />
								)}
							</div>
						))}
					</div>
				</div>
			))
		}
	</section>
</Layout>

<style>
	.skills-section {
		padding: 2rem;
	}

	h2 {
		color: #ba5765;
		font-size: 1.5rem;
		margin-bottom: 2rem;
	}
	h3 {
		color: #ba5765;
		font-size: 0.5rem;
	}
	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
		gap: 2rem;
		justify-items: center;
		max-width: 1200px;
		margin: 0 auto;
	}

	.skill-item {
		width: 60px;
		height: 60px;
		display: flex;
		align-items: center;
		justify-content: center;
		cursor: pointer;
		transition: all 0.3s ease;
		padding: 0.5rem;
		border-radius: 8px;
	}

	.tech-icon {
		font-size: 3rem;
		stroke-width: 1.5;
		transition: all 0.3s ease;
	}

	.skill-item:hover {
		transform: scale(1.1);
	}

	.hello-section {
		padding: 4rem 2rem;
		background-color: white;
		color: #ba5765;
	}

	.profile-container {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: 1fr 2fr;
		gap: 4rem;
		align-items: start;
	}

	.profile-image {
		width: 100%;
		max-width: 400px;
		height: auto;
		border-radius: 4px;
	}

	.profile-content h1 {
		font-size: 3rem;
		margin-bottom: 1.5rem;
		color: #ba5765;
	}

	.profile-content p {
		font-size: 1.1rem;
		line-height: 1.6;
		margin-bottom: 2rem;
		color: #ba5765;
	}

	.social-links {
		display: flex;
		gap: 1.5rem;
	}

	.social-icon {
		width: 24px;
		height: 24px;
		color: #ba5765;
		transition: color 0.3s ease;
	}

	.social-icon:hover {
		color: #ba5765;
	}

	.tie-up-section {
		padding: 4rem 2rem;
		color: white;
	}

	.tie-up-section h2 {
		font-size: 3rem;
		margin-bottom: 2rem;
		color: #ba5765;
		max-width: 1200px;
		margin-left: auto;
		margin-right: auto;
	}

	.location-details {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.detail-item {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.detail-icon {
		width: 24px;
		height: 24px;
		color: #ba5765;
	}

	.detail-item a {
		color: #ba5765;
		text-decoration: none;
		transition: opacity 0.3s ease;
	}

	.detail-item a:hover {
		opacity: 0.8;
	}

	.map-container {
		width: 100%;
		max-width: 1200px;
		margin: 2rem auto;
		padding: 0 2rem;
	}

	@media (max-width: 768px) {
		.profile-container {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.profile-image {
			margin: 0 auto;
		}

		.social-links {
			justify-content: center;
		}
	}

	.certifications {
		margin-top: 4rem;
		text-align: center;
	}

	.cert-card img {
		max-width: 500px;
		width: 100%;
		height: auto;
		border-radius: 8px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
		margin-top: 1rem;
	}

	.cert-card p {
		color: #ba5765;
		margin-top: 1rem;
		font-weight: 500;
	}

	.tech-icon {
		font-size: 3rem;
		color: inherit;
		transition: all 0.3s ease;
		stroke: none;
	}

	/* For non-SVG icons or images within .tech-icon */
	.skill-item img {
		filter: grayscale(0%) sepia(100%) saturate(0%) brightness(100%);
	}

	/* On hover, for images, make sure the grayscale is removed */
	.skill-item:hover img {
		filter: none;
	}
</style>

<script>
	// Update experience text on hover
	const skillItems = document.querySelectorAll<HTMLElement>(".skill-item");
	const experienceText = document.getElementById("experienceText");

	skillItems.forEach((item) => {
		item.addEventListener("mouseenter", () => {
			const technology = item.getAttribute("data-technology");
			if (experienceText) {
				experienceText.textContent = `Experienced in: ${technology}`;
			}
			item.style.backgroundColor = "#FFF0DB";
		});

		item.addEventListener("mouseleave", () => {
			if (experienceText) {
				experienceText.textContent =
					"Hover over a technology to see my experience";
			}
			item.style.backgroundColor = "transparent";
		});
	});
</script>
