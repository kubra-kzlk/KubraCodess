<style>
    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .project-card {
        background-color: #f0f7ff; /* Light blue background instead of beige */
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .project-card:hover {
        transform: translateY(-5px);
    }

    .image-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
    }

    .image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .project-card:hover .image-container img {
        transform: scale(1.05);
    }

    .content {
        padding: 1.5rem;
    }

    h2 {
        font-size: 1.5rem;
        color: #2c5282; /* Dark blue instead of burgundy */
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    .date {
        color: #4a5568;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .project-link {
        display: inline-block;
        margin-bottom: 1rem;
    }

    .icon {
        width: 24px;
        height: 24px;
        color: #2c5282; /* Dark blue */
    }

    .description {
        color: #4a5568;
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    .read-more {
        color: #2c5282; /* Dark blue */
        text-decoration: none;
        font-weight: 500;
        display: inline-block;
        margin-bottom: 1rem;
    }

    .read-more:hover {
        text-decoration: underline;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tag {
        background-color: #bee3f8; /* Light blue */
        color: #2c5282; /* Dark blue */
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        transition: background-color 0.3s ease;
    }

    .tag:hover {
        background-color: #90cdf4; /* Slightly darker blue on hover */
    }

    @media (max-width: 768px) {
        .projects-grid {
            grid-template-columns: 1fr;
            padding: 1rem;
        }
    }
</style>

