---
import { fetchBlogPostBySlug, fetchBlogPosts } from "../../lib/contentful";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";

export async function getStaticPaths() {
  const posts = await fetchBlogPosts();
  return posts.map((post) => ({
    params: { slug: post.slug }, // âœ… Astro now knows what slugs to generate
  }));
}
const { slug } = Astro.params;
const post = await fetchBlogPostBySlug(slug);
if (!post) {
  throw new Error(`No blog post found for slug: ${slug}`);
}
const { title, shortDescription, featuredImage, content } = post;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <article>
      <h1>{title}</h1>
      {shortDescription && <h2>{shortDescription}</h2>}
      {featuredImage && <img src={featuredImage} />}
      <div set:html={content} />
    </article>
  </body>
</html>
