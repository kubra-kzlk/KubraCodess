---
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { fetchBlogPostBySlug, fetchBlogPosts } from "../../lib/contentful";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import Layout from "src/layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await fetchBlogPosts();
  return posts.map((post) => ({
    params: { slug: post.slug },
  }));
}

const { slug } = Astro.params;
const post = await fetchBlogPostBySlug(slug);
if (!post) {
  throw new Error(`No blog post found for slug: ${slug}`);
}

const {
  title,
  shortDescription,
  featuredImage,
  content,
  author,
  publishedDate,
  relatedBlogPosts,
  galleryImages,
} = post;
console.log("ðŸš€ Rendered Blog Post:", post);
console.log("ðŸ–¼ Rendered Gallery Images:", galleryImages);
---

<Layout
  title=""
  description="My programming projects showcase"
  pubDate={new Date("2024-02-09")}
>
  <body>
    <main>
      <article>
        <h1>{title}</h1>
        {shortDescription && <h2>{shortDescription}</h2>}

        <!-- Author and Date -->
        <div class="meta">
          <span>ðŸ–Š {author}</span> | <span>ðŸ“… {publishedDate}</span>
        </div>

        <!-- Featured Image -->
        {featuredImage && <img class="featured-image" src={featuredImage} />}

        <!-- Blog Content -->
        <div class="content" set:html={content} />

        <!-- Related Articles -->
        {
          relatedBlogPosts.length > 0 && (
            <div class="related-articles">
              <h3>Related Articles</h3>
              <div class="related-list">
                {relatedBlogPosts.map(
                  (related: { title: unknown; slug: any }) => (
                    <div class="related-post">
                      <img
                        src={`https://via.placeholder.com/300x180?text=${related.title}`}
                      />
                      <h4>{related.title}</h4>
                      <a href={`/blog/${related.slug}`}>Read More</a>
                    </div>
                  )
                )}
              </div>
            </div>
          )
        }
        {
          galleryImages.length > 0 ? (
            <div class="gallery">
              <h3>Image Gallery</h3>
              <div class="gallery-grid">
                {galleryImages.map(
                  (image: { url: string | null | undefined; title: any }) =>
                    image?.url ? (
                      <img
                        src={image.url}
                        alt={image.title || "Gallery Image"}
                      />
                    ) : null
                )}
              </div>
            </div>
          ) : null
        }
      </article>
    </main>
  </body>
</Layout>
<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f8f9fa;
    color: #ba5765;
  }
  main {
    width: 80%;
    max-width: 960px;
    margin: 40px auto;
    background: white;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  }
  h1 {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 0.5rem;
    color: #ba5765;
  }
  h2 {
    text-align: center;
    color: #ba5765;
    margin-bottom: 10px;
  }
  .meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    font-size: 0.9rem;
    color: #ba5765;
  }
  .meta img {
    width: 32px;
    height: 32px;
    border-radius: 50%;
  }
  .featured-image {
    width: 100%;
    border-radius: 12px;
    margin: 20px 0;
  }
  .content {
    margin-top: 1.5rem;
    line-height: 1.8;
    font-size: 1rem;
    color: #ba5765;
  }
  .related-articles {
    margin-top: 40px;
  }
  .related-articles h3 {
    text-align: center;
    margin-bottom: 20px;
    color: #ba5765;
  }
  .related-list {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }
  .related-post {
    width: 300px;
    background: white;
    border-radius: 12px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    text-align: center;
  }
  .related-post img {
    width: 100%;
