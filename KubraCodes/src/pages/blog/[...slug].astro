  }

  .gallery h3 {
    font-size: 1.5rem;
    color: #ba5765;
    margin-bottom: 20px;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 15px;
    justify-content: center;
  }

  .gallery-grid img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 8px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s;
  }

  .gallery-grid img:hover {
    transform: scale(1.05);
  }
</style>
